<header>
  <div class="logo">
      <img src="/assets/logo-login.png" alt="pokemon-logo">
  </div>
</header>

<div class="row">
    
    <div class="col-md-12 col-sm-6">               
        <div class="login-warp">
      <div class="login-warp-data">
       <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, id: "change_password_form" }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
          <div class="text-center"><h3>RESET PASSWORD</h3></div>
          <div class="form-group label-floating">
              <div class="icon-addon addon-md">
                <label for="pwd" class="control-label">New Password</label>
               <%= f.password_field :password, class: "form-control required pass", :content => "Must be at least 6 characters long, and contain at least one number, one uppercase and one lowercase letter.", :minlength => 8, :mypassword => true,  autofocus: true, autocomplete: "off", required: true%>
                <label for="pwd" class="glyphicon glyphicon-pwd" rel="tooltip" title="New Password"></label>
             </div>
          </div>
          <div class="form-group label-floating">
              <div class="icon-addon addon-md">
                <label for="cnfpwd" class="control-label">Confirm New Password</label>
               <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off",required: true, :equalTo => "#user_password" %>
                <label for="cnfpwd" class="glyphicon glyphicon-pwd" rel="tooltip" title="Confirm Password"></label>
             </div>
          </div>
          
           <%= f.submit "Change my password", :class=>"btn btn btn-raised btn-login btn-theme1" %>
      <% end %>

      </div>
         
        </div>
    </div>
</div>
<script type="text/javascript">
$(document).ready(function(){
  $("#change_password_form").validate();
})
</script>
